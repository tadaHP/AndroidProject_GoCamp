<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@drawable/main_button_background"
    android:id="@+id/recycler_camp"
    android:layout_marginBottom="20dp"
    >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"

        android:layout_marginStart="20dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="캠핑장명"
        android:textSize="30dp"
        android:id="@+id/campPlaceName"

        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="캠핑장주소"
        android:textSize="18dp"
        android:id="@+id/campAddress1"

        app:layout_constraintStart_toStartOf="@+id/campPlaceName"
        app:layout_constraintTop_toBottomOf="@+id/campPlaceName" />

    <TextView
        android:id="@+id/campAddress2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="캠핑장주소"
        android:textSize="18dp"


        app:layout_constraintStart_toStartOf="@+id/campAddress1"
        app:layout_constraintTop_toBottomOf="@+id/campAddress1" />


    <TextView
        android:id="@+id/campCall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="캠핑장연락처"
        android:textSize="18dp"

        app:layout_constraintStart_toStartOf="@+id/campAddress2"
        app:layout_constraintTop_toBottomOf="@+id/campAddress2" />


</androidx.constraintlayout.widget.ConstraintLayout>